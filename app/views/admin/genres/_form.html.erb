<%= form_with(model: genre, url: admin_genres_path, class: "container mt-5") do |form| %>
  <div class="card shadow-sm border-light p-4">
    <div class="card-body">
      <% if genre.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(genre.errors.count, "error") %> prohibited this genre from being saved:</h4>
          <ul>
            <% genre.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h1 class="mb-4 text-center" style="font-family: 'Merriweather', serif; color: #4d3f2b;">
        <%= @genre.new_record? ? "New Genre" : "Edit Genre" %>
      </h1>
      <div class="mb-3">
        <%= form.label :name, "Genre Name", class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter the genre name" %>
      </div>

      <div class="text-center">
        <%= form.submit "Save Genre", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>